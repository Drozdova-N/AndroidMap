<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_route"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/photo_place"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/margin_list"
        android:src="@drawable/route" />

    <TextView
        android:id="@+id/points_start_to_end"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_list"
        android:textSize="@dimen/textSize"
        tools:text="г.Санкт-Петербург Институтский проспект д.9 лит В - г.Москва ул.Индустриальная д.78" />

    <ImageView
        android:id="@+id/save_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_list"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:src="@drawable/startrue" />
</LinearLayout>